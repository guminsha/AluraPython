import guess
import hangman

print("****************************")
print("******Choose your game******")
print("****************************")

game = int(input("\n1- Guess the number\n2- Hangman\n"))

guess_number = guess
hangman_game = hangman

match game:
	case 1:
		guess_number.play()
	case 2:
		hangman_game.play()


